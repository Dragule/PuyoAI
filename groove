      // Ne se déplace pas
	  { tetris::DROP },

	  // Se déplace sur la gauche sans rotation
      { tetris::MOVE_LEFT, tetris::DROP },
      { tetris::MOVE_LEFT, tetris::MOVE_LEFT, tetris::DROP },

	  // Se déplace sur la droite sans rotation
      { tetris::MOVE_RIGHT, tetris::DROP },
      { tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
      { tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },

	  // Tourne dans le sens trigonométrique sans se déplacer
      { tetris::ROTATE_RIGHT, tetris::DROP },
	  // Tourne dans le sens trigonométrique puis se déplace sur la gauche
      { tetris::ROTATE_RIGHT, tetris::MOVE_LEFT, tetris::DROP },
      { tetris::ROTATE_RIGHT, tetris::MOVE_LEFT, tetris::MOVE_LEFT, tetris::DROP },
  	  // Tourne dans le sens trigonométrique puis se déplace sur la droite
      { tetris::ROTATE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
      { tetris::ROTATE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
	  
	  // Rotationne dans le sens horaire sans se déplacer
	  { tetris::ROTATE_LEFT, tetris::DROP },
	  // Tourne dans le sens horaire puis se déplace sur la gauche
      { tetris::ROTATE_LEFT, tetris::MOVE_LEFT, tetris::DROP },
	  // Tourne dans le sens horaire puis se déplace sur la droite
	  { tetris::ROTATE_LEFT, tetris::MOVE_RIGHT, tetris::DROP },
	  { tetris::ROTATE_LEFT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
	  { tetris::ROTATE_LEFT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },

	  // Se retourne (deux rotations trigonométriques) sans se déplacer
	  { tetris::ROTATE_RIGHT, tetris::MOVE_DOWN, tetris::ROTATE_RIGHT, tetris::DROP },
	  // Se retourne (deux rotations trigonométriques) puis se déplace sur la gauche
	  { tetris::ROTATE_RIGHT, tetris::MOVE_DOWN, tetris::ROTATE_RIGHT, tetris::MOVE_LEFT, tetris::DROP },
	  { tetris::ROTATE_RIGHT, tetris::MOVE_DOWN, tetris::ROTATE_RIGHT, tetris::MOVE_LEFT, tetris::MOVE_LEFT, tetris::DROP },
	  // Se retourne (deux rotations trigonométriques) puis se déplace sur la droite
	  { tetris::ROTATE_RIGHT, tetris::MOVE_DOWN, tetris::ROTATE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
	  { tetris::ROTATE_RIGHT, tetris::MOVE_DOWN, tetris::ROTATE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
	  { tetris::ROTATE_RIGHT, tetris::MOVE_DOWN, tetris::ROTATE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },

	  // Se retourne (deux rotations horaires) sans se déplacer
	  { tetris::ROTATE_LEFT, tetris::MOVE_DOWN, tetris::ROTATE_LEFT, tetris::DROP },
	  // Se retourne (deux rotations horaires) puis se déplace sur la gauche
	  { tetris::ROTATE_LEFT, tetris::MOVE_DOWN, tetris::ROTATE_LEFT, tetris::MOVE_LEFT, tetris::DROP },
	  { tetris::ROTATE_LEFT, tetris::MOVE_DOWN, tetris::ROTATE_LEFT, tetris::MOVE_LEFT, tetris::MOVE_LEFT, tetris::DROP },
	  // Se retourne (deux rotations horaires) puis se déplace sur la droite
	  { tetris::ROTATE_LEFT, tetris::MOVE_DOWN, tetris::ROTATE_LEFT, tetris::MOVE_RIGHT, tetris::DROP },
	  { tetris::ROTATE_LEFT, tetris::MOVE_DOWN, tetris::ROTATE_LEFT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
	  { tetris::ROTATE_LEFT, tetris::MOVE_DOWN, tetris::ROTATE_LEFT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::MOVE_RIGHT, tetris::DROP },
